#include <iostream>
using namespace std;

int main(){
       /*  Read input as specified in the question.
        * Print output as specified in the question.
        */
  int n;
  cin>>n;
  for(int i=1;i<=n;i++)
  {
      for(int j=1;j<=2*n+1;j++)
      {
          if(j==i || j==(n+1) || ((n+1)*2)-j==i)
          {
              cout<<"*";
          }
          else
          {
              cout<<"0";
          }
      }
      cout<<endl;
  }
}

