#include<iostream>
#include<math.h>
using namespace std;
int main()
{ 
    int basic;
    double total;
    char grade;
    
    cin>>basic>>grade;
    double hra=0.2*basic;
    double da=0.5*basic; 
    double pf=0.11*basic;
    if(grade=='A') {
        
        total=basic+hra+da+1700-pf;
        cout<<(int)round(total);
    }else if(grade=='B') { 
           
            total=basic+hra+da+1500-pf;
            cout<<(int)round(total);
    } else{
            
            total=basic+hra+da+1300-pf;
            cout<<(int)round(total);
    }
}                
